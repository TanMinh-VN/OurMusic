@using MusicOnlineDB.EF;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = Session["USER_SESSION"] as MusicOnline.Code.UserSession;
    IEnumerable<Artist> listArtist = ViewBag.ListArtist;
